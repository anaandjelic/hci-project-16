<Page x:Class="HCI_Project.clientPages.ClientPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HCI_Project.clientPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ClientPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0" Background="DodgerBlue">
            <Menu Background="DodgerBlue" Foreground="AliceBlue" FontSize="24">
                <MenuItem Header="Search" Style="{StaticResource MenuStyle}">
                    <MenuItem Header="TrainLine" Style="{StaticResource MenuItemStyle}" Click="ShowMap"/>
                    <MenuItem Header="Timetable" Style="{StaticResource MenuItemStyle}" Click="ShowSearch"/>
                </MenuItem>
                <MenuItem Header="History" Style="{StaticResource MenuStyle}">
                    <MenuItem Header="Tickets" Style="{StaticResource MenuItemStyle}" Click="ShowTickets"/>
                    <MenuItem Header="Reservations" Style="{StaticResource MenuItemStyle}"/>
                </MenuItem>
                <MenuItem Header="Log Out" Style="{StaticResource MenuStyle}" Click="LogOutClick"/>
            </Menu>
        </DockPanel>
        <Frame x:Name="ClientFrame" Grid.Row="2"/>
    </Grid>
</Page>
