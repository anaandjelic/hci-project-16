<Page x:Class="HCI_Project.managerPages.ManagerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HCI_Project.managerPages"
      mc:Ignorable="d" Background="White"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ManagerPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0" Background="DodgerBlue">
            <Button Style="{DynamicResource MenuButton}">
                <Viewbox>
                    <TextBlock Padding="5" Text="Home"/>
                </Viewbox>
            </Button>
            <Button Style="{DynamicResource MenuButton}">
                <Viewbox>
                    <TextBlock Padding="5" Text="New train"/>
                </Viewbox>
            </Button>
            <Button Style="{DynamicResource MenuButton}">
                <Viewbox>
                    <TextBlock Text="New trainline" Padding="5"/>
                </Viewbox>
            </Button>
            <Button Style="{DynamicResource MenuButton}">
                <Viewbox>
                    <TextBlock Text="New timetable" Padding="5"/>
                </Viewbox>
            </Button>
            <Button Style="{DynamicResource MenuButton}">
                <Viewbox>
                    <TextBlock Text="Monthly report" Padding="5"/>
                </Viewbox>
            </Button>
            <Button Style="{DynamicResource MenuButton}">
                <Viewbox>
                    <TextBlock Text="Trainline report" Padding="5"/>
                </Viewbox>
            </Button>
            <Button Style="{DynamicResource MenuButton}" HorizontalAlignment="Right">
                <Viewbox>
                    <TextBlock Text="Log out" Padding="5"/>
                </Viewbox>
            </Button>
        </DockPanel>
        <Frame x:Name="ManagerFrame" Grid.Row="2"/>
    </Grid>
</Page>
