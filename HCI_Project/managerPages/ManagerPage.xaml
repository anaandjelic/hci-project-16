<Page x:Class="HCI_Project.managerPages.ManagerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HCI_Project.managerPages"
      mc:Ignorable="d" Background="White"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ManagerPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0" Background="DodgerBlue">
            <Menu Background="DodgerBlue" Foreground="AliceBlue" FontSize="23">
                <MenuItem Header="Edit" Style="{StaticResource MenuStyle}">
                    <MenuItem Header="Train" Style="{StaticResource MenuItemStyle}"/>
                    <MenuItem Header="TrainLine" Style="{StaticResource MenuItemStyle}"/>
                    <MenuItem Header="Timetable" Style="{StaticResource MenuItemStyle}"/>
                </MenuItem>
                <MenuItem Header="New" Style="{StaticResource MenuStyle}">
                    <MenuItem Header="Train" Style="{StaticResource MenuItemStyle}"/>
                    <MenuItem Header="TrainLine" Style="{StaticResource MenuItemStyle}"/>
                    <MenuItem Header="Timetable" Style="{StaticResource MenuItemStyle}"/>
                </MenuItem>
                <MenuItem Header="Reports" Style="{StaticResource MenuStyle}">
                    <MenuItem Header="Monthly" Style="{StaticResource MenuItemStyle}"/>
                    <MenuItem Header="Per timetable" Style="{StaticResource MenuItemStyle}"/>
                </MenuItem>
                <MenuItem Header="Log Out" Style="{StaticResource MenuStyle}" Click="LogOutClick"/>
            </Menu>
        </DockPanel>
        <Frame x:Name="ManagerFrame" Grid.Row="2"/>
    </Grid>
</Page>
